<div class="recipe-whole-card">
  <%= link_to recipe_path(recipe) do %>
    <div class="recipe-full-card">
      <div class="recipe-image">
        <% if recipe.photo.attached? %>
        <%= cl_image_tag recipe.photo.key %>
        <% else %>
        <%= image_tag("placeholder") %>
        <% end %>
      </div>
      <div class="recipe-details">
        <h2 id="recipe-name"><%= recipe.name %></h2>
        <p id="recipe-author">de <%= recipe.author %></p>
        <p id="recipe-prep-time">Prep: <%= recipe.prep_time %></p>
      </div>
    </div>
  <% end %>
</div>


